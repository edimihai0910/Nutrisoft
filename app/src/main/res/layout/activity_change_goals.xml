<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#5900B0FF">

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="231dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">


            <!-- Status -->
            <TextView
                android:id="@+id/textViewGoalCurrentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Current weight -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalCurrentWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalCurrentWeightNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="kg"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Current weight -->

                <!-- Current weight -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalTargetWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target"

                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalCurrentTargetNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="kg"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Current weight -->

                <!-- Method -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Method"

                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalMethodText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"

                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Method -->

                <!-- Activity level -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewActivityLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/activity_level"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Activity level -->


            </TableLayout>
            <!-- //Status -->

            <!-- Numbers -->
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Values"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBoxGoalToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:backgroundTintMode="@color/white"
                        android:text="Advanced"
                        android:textColor="@color/white" />
                </TableRow>
            </TableLayout>
            <!-- //Numbers -->

            <!-- I want to loose -->
            <TextView
                android:id="@+id/textViewGoalNumbersIfYouWantToLooseWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you want to loose weight"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <!-- //I want to loose -->

            <!-- I want to loose table layout -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Headcell -->
                <TableRow
                    android:id="@+id/textViewGoalMethodRowA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellEnergy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Energy"

                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellProteins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Proteins"

                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellCarbs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Carbs"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellFat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Fat"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Headcell -->

                <!-- Loose with out activity -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalMethodDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Without activity"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalEnergyDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalProteinsDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalCarbsDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalFatDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Loose with out activity -->

                <!-- Loose with acitivty -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalMethodWithActivityAndDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="With Activity"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalEnergyWithActivityAndDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalProteinsWithActivityAndDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalCarbsWithActivityAndDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalFatWithActivityAndDiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="0"
                        android:textColor="@color/white" />
                </TableRow>
                <!-- //With activity -->
            </TableLayout>

            <TextView
                android:id="@+id/textViewGoalNumbersIfYouWantToKeepYourWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="If you want to keep your weight"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Headcell -->
                <TableRow
                    android:id="@+id/textViewGoalMethodRowB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalMethodB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellEnergyB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="Energy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellProteinsB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="Proteins"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellCarbsB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="Carbs"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalHeadcellFatB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="Fat"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //Headcell -->
                <!-- BMR -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalMethodBMR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="WithoutActivity"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalEnergyBMR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalProteinsBMR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalCarbsBMR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalFatBMR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                </TableRow>
                <!-- //BMR -->


                <!-- with activity -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGoalMethodWithActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="With Activity"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalEnergyWithActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalProteinsWithActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalCarbsWithActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGoalFatWithActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="0"
                        android:textColor="@color/white" />

                </TableRow>
            </TableLayout>
            <!-- //Numbers -->

        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/edit_goalsButton"
        android:layout_width="91dp"
        android:layout_height="67dp"
        android:layout_marginStart="313dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>